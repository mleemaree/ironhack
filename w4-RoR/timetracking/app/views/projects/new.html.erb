<% if @project.errors.any? %>
	<ol>
		<% @project.errors.full_messages.each do |err_msg| %>
			<li><%= err_msg  %></li>
		<% end %>
	</ol>
<% end %>

<%= form_for [@project] do |f| %>

	<%= f.label :name  %>
	<%= f.text_field :name  %>
	<br>
	<%= f.label :description  %>
	<%= f.text_area :description  %>
	<br>
	<%= f.submit 'Save'  %>

<% end %>
<br>
<% link_to('Cancel', projects_path)%>
